CREATE DATABASE Gerenciador;

CREATE TABLE TBL_USUARIO (
    USU_ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    USU_NOME VARCHAR(50) NOT NULL,
    USU_SOBRENOME VARCHAR(50) NOT NULL,
    USU_DTNASC VARCHAR(10) NOT NULL,
    USU_LOGIN VARCHAR(20) NOT NULL,
    USU_SENHA VARCHAR(20) NOT NULL
);

CREATE TABLE TBL_ATIVIDADE (
    ATV_ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    ATV_TITULO VARCHAR(150)  NOT NULL,
    ATV_DESCRICAO VARCHAR(255),
    ATV_DT_CRIACAO DATE,
    ATV_DT_CONC DATE,
    ATV_STATUS CHAR(1),
    USU_ID INT,
    FOREIGN KEY (USU_ID) REFERENCES TBL_USUARIO(USU_ID)
);

use gerenciador;
